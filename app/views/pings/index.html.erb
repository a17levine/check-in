<div class="row">
    <div class="large-12 columns">
        <h1 class="main-header">
			<img src="https://podmaker.herokuapp.com/makersquare-logo.png" /> Welcome to MAKER<span class="skinny-text">SQUARE</span>
		</h1>
		<hr />
    </div>
    <div class="large-12 columns">
    	<h3>Please select your contact to ping <i class="fa fa-comment-o"></i></h3>
    </div>
	
	<div class="large-12 columns ">
		<% @users.each do |u| %>
			<div class="large-4 columns user-button-rows">
				<%= link_to user_path(u), {class: "user-button"} do %>
					<%= raw "#{gravatar_for(u, size: 50)} #{u.name}" %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>