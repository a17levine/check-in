
<div class="row send-ping-wrapper">
	<div class="large-12 columns">
		<h1 class="text-center">Ping <%= raw "#{gravatar_for(@user, size: 100)} #{@user.name}" %></h1>

		<%= form_for @ping, url: ping_user_path(@user) do |f| %>
		  <h3>Type your name below<br /></h3>
		  <%= f.text_field :message %><br />

		  <div class="row">
		  	<div class="large-6 columns">
		  		<%= f.submit "Send Ping", {:class => "button large larger-btn success send-ping-submit"} %>
		  	</div>
		  	<div class="large-6 columns">
		  		<%= link_to "Cancel", root_path, {:class => "button large larger-btn alert"} %>
		  	</div>
		  </div>
		<% end %>
	</div>
</div>

